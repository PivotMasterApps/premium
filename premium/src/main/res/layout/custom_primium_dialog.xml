<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/premium_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/premium_cover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.3"
        android:background="@drawable/img_plus_dialog"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/premium_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/exit_btn"/>

    <TextView
        android:id="@+id/premium_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/premium_text"
        android:layout_marginTop="16dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/premium_text_color"
        android:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/premium_cover"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/premium_one_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_with_goplus_btn_bg"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:text="TRY FOR FREE"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/autorenew_text"
        app:layout_constraintEnd_toStartOf="@id/continue_free_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/continue_free_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to free version"
        android:textColor="@color/premium_text_color"
        app:layout_constraintBottom_toBottomOf="@id/premium_one_time"
        app:layout_constraintTop_toTopOf="@id/premium_one_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/premium_one_time" />

    <TextView
        android:id="@+id/autorenew_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="@color/premium_text_color"
        android:gravity="center"
        android:lines="1"
        android:text="Auto-renew. Cancel anytime."
        android:foregroundGravity="center"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/pricing_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@color/premium_text_color"
        android:gravity="center"
        android:lines="2"
        android:foregroundGravity="center"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/premium_one_time"/>

    <ProgressBar
        android:id="@+id/premium_pb_one_time"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/pricing_text"
        app:layout_constraintEnd_toEndOf="@+id/autorenew_text"
        app:layout_constraintStart_toStartOf="@id/premium_one_time"
        app:layout_constraintTop_toTopOf="@+id/pricing_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintBottom_toTopOf="@+id/pricing_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/premium_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:alpha="0.8"
                    app:drawableTint="@color/premium_text_color"
                    app:drawableStartCompat="@drawable/premium_feature_1_ic"
                    android:drawablePadding="16dp"
                    android:text="@string/feature_1"
                    android:textColor="@color/premium_text_color"
                    android:textSize="24sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_baseline_check_24" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="32dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:alpha="0.8"
                    app:drawableTint="@color/premium_text_color"
                    app:drawableStartCompat="@drawable/premium_feature_2_ic"
                    android:drawablePadding="16dp"
                    android:text="@string/feature_2"
                    android:textColor="@color/premium_text_color"
                    android:textSize="24sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tint="#E91E63"
                    app:srcCompat="@drawable/ic_baseline_check_24" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="32dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:alpha="0.8"
                    app:drawableTint="@color/premium_text_color"
                    app:drawableStartCompat="@drawable/premium_feature_3_ic"
                    android:drawablePadding="16dp"
                    android:text="@string/feature_3"
                    android:textColor="@color/premium_text_color"
                    android:textSize="24sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tint="#FF9800"
                    app:srcCompat="@drawable/ic_baseline_check_24" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

